<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6FAEB"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/tb_menu_1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Domino Shop"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="11dp"
            android:background="@mipmap/tbmenu"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="#303030"/>

        <Button
            android:id="@+id/tb_menu_2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Center Shop"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="11dp"
            android:background="@null"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="#9F9D9B"/>

        <Button
            android:id="@+id/tb_menu_3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Guy's Shop"
            android:textSize="11dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@null"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="#9F9D9B"/>


    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#303030"
        android:text="Domino Shop"/>

    <TextView
        android:id="@+id/desc"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#9F9D9B"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et"/>

    <ImageView
        android:id="@+id/icon_utama"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:src="@mipmap/iconutama"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <GridLayout
        android:orientation="horizontal"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/icon1"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@mipmap/dog"
            android:layout_width="94dp"
            android:layout_height="120dp"/>

        <ImageButton
            android:id="@+id/icon2"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@mipmap/bear"
            android:layout_width="94dp"
            android:layout_height="120dp"/>

        <ImageButton
            android:id="@+id/icon3"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@mipmap/giraffe"
            android:layout_width="94dp"
            android:layout_height="120dp"/>

    </GridLayout>

    <Button
        android:id="@+id/tbFollow"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:text="Follow"
        android:textColor="#ffff"
        android:layout_width="156dp"
        android:layout_height="38dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@mipmap/tbfollow"/>

</LinearLayout>